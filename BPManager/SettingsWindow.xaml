<Window x:Class="BPManager.settingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BPManager"
        mc:Ignorable="d"
        Title="Settings" Height="350" Width="375">
    <Grid Background="#FF807C7C">


        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="-2,0">
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <RadioButton x:Name="rdoLocalFile" Margin="10" Checked="RdoLocalFile_Checked">Local File</RadioButton>
                <RadioButton x:Name="rdoServerFile" Margin="10" Checked="RdoServerFile_Checked">Server Address</RadioButton>
                
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label VerticalAlignment="Center">Settings File:</Label>
                <TextBox Width="250" Height="20"  x:Name="textSaveFile" Margin="5"/>
            </StackPanel>
            <Label x:Name="lblServerWarning" HorizontalAlignment="Center"></Label>
            <Button Content="Save" Width="75" Height="30" Margin="5" Click="ButtonSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
